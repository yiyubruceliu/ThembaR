pragma solidity ^0.4.16;

import "./../node_modules/minimetoken/contracts/MiniMeToken.sol";
import "./Agreement.sol";

contract ThembaR is MiniMeToken {
    address _owner;
    function ThembaR(address _blaToken, address _parentToken,
        uint _snapshotBlock,
        string _tokenName,
        uint8 _decimalUnits,
        string _tokenSymbol,
        bool _transfersEnabled) MiniMeToken(_blaToken, _parentToken, _snapshotBlock,
         _tokenName,
         _decimalUnits,
         _tokenSymbol,
         _transfersEnabled) public
         {
             _owner = msg.sender;
         }
        address[] agreements;
        function addAgreement(address _arrangee, uint _direction, uint _left, uint _right) public {
            require(_owner == msg.sender);
            Agreement a = new Agreement( _arrangee, _direction,  _left, _right);
            agreements.push(a);
        }
 
    }